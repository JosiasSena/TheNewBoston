<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TheNewBoston.fragments.MathematicsFragment"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mathematics"
        android:textSize="30sp"
        android:fontFamily="times"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/algebraBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Algebra"
            android:background="@drawable/humanities_main_btn"/>

        <Button
            android:id="@+id/calculusBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Calculus"
            android:background="@drawable/computer_science_main_btn"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/geometryBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Geometry"
            android:background="@drawable/science_main_btn"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/statisticsBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Statistics"
            android:background="@drawable/math_main_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trigBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Trigonometry"
            android:background="@drawable/social_sciences_main_btn"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/otherBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:text="Other"
            android:background="@drawable/business_main_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>
