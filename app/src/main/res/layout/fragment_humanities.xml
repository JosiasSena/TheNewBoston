<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TheNewBoston.fragments.HumanitiesFragment"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humanities"
        android:textSize="30sp"
        android:fontFamily="times"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/historyBtn"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="History"
            android:background="@drawable/humanities_main_btn" />

        <Button
            android:id="@+id/philosophyBtn"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="Philosophy"
            android:background="@drawable/computer_science_main_btn"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/humanitiesOtherBtn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:text="Other"
        android:background="@drawable/social_sciences_main_btn"
        android:layout_marginTop="5dp" />

</LinearLayout>
